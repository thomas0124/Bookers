<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error">
    <%= @book.errors.count %> error(s) occurred.
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :put do |f| %>
  <div class="field">
    <label>
      Title 
    </label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>
      Body
    </label>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>


<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>